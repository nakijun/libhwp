INSTALL
-------
sudo apt-get update
sudo apt-get install build-essential cdbs devscripts dh-autoreconf intltool  \
  libgsf-1-dev libcairo2-dev libpango1.0-dev libpoppler-glib-dev libxml2-dev \
  libgirepository1.0-dev gtk-doc-tools

cd libhwp
mkdir -p m4
gtkdocize
dpkg-buildpackage -b
cd ..
ls *.deb
sudo dpkg -i libhwp*.deb


